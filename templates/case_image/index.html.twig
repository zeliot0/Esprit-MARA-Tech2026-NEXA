{% extends 'base.html.twig' %}

{% block title %}CaseImage index{% endblock %}

{% block body %}
    <h1>CaseImage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageUrl</th>
                <th>AltText</th>
                <th>SortOrder</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for case_image in case_images %}
            <tr>
                <td>{{ case_image.id }}</td>
                <td>{{ case_image.imageUrl }}</td>
                <td>{{ case_image.altText }}</td>
                <td>{{ case_image.sortOrder }}</td>
                <td>{{ case_image.createdAt ? case_image.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_case_image_show', {'id': case_image.id}) }}">show</a>
                    <a href="{{ path('app_case_image_edit', {'id': case_image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_case_image_new') }}">Create new</a>
{% endblock %}
