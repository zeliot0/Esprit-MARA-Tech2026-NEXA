{% extends 'base.html.twig' %}

{% block title %}Connexion | Aychek{% endblock %}

{% block hide_nav %}{% endblock %}

{% block body %}
<div class="container" style="min-height: 100vh; display: grid; place-items: center; padding: 0;">
    <div class="glass-panel animate-up" style="width: 100%; max-width: 480px; padding: var(--space-xl); position: relative; overflow: hidden;">
        <!-- Background accents -->
        <div style="position: absolute; top: -50px; right: -50px; width: 150px; height: 150px; background: var(--grad-premium); opacity: 0.1; filter: blur(50px); border-radius: 50%; z-index: -1;"></div>
        <div style="position: absolute; bottom: -50px; left: -50px; width: 150px; height: 150px; background: var(--brand); opacity: 0.1; filter: blur(50px); border-radius: 50%; z-index: -1;"></div>

        <div style="text-align: center; margin-bottom: var(--space-xl);">
            <div class="brand-badge float" style="margin: 0 auto 1.5rem auto; width: 64px; height: 64px; font-size: 1.75rem;">
                <i class="fa-solid fa-lock"></i>
            </div>
            <h1 style="font-size: 2rem; font-weight: 800; letter-spacing: -0.04em; color: var(--text);">Ravis de vous revoir</h1>
            <p style="color: var(--muted); font-weight: 500;">Entrez vos identifiants pour accéder à votre espace</p>
        </div>

        <form method="post">
            {% if error %}
                <div style="background: rgba(239, 68, 68, 0.1); color: #ef4444; padding: 12px; border-radius: var(--radius-md); margin-bottom: 24px; font-size: 0.875rem; border: 1px solid rgba(239, 68, 68, 0.2);">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div class="form-field">
                <label for="inputEmail" class="form-label">Adresse Email</label>
                <div style="position: relative;">
                    <i class="fa-regular fa-envelope" style="position: absolute; left: 16px; top: 18px; color: var(--muted);"></i>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-input" style="padding-left: 48px;" autocomplete="email" required autofocus placeholder="nom@exemple.com">
                </div>
            </div>

            <div class="form-field">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                    <label for="inputPassword" class="form-label" style="margin-bottom: 0;">Mot de passe</label>
                    <a href="#" style="font-size: 0.75rem; font-weight: 700; color: var(--brand); text-decoration: none;">Oublié ?</a>
                </div>
                <div style="position: relative;">
                    <i class="fa-solid fa-key" style="position: absolute; left: 16px; top: 18px; color: var(--muted);"></i>
                    <input type="password" name="_password" id="inputPassword" class="form-input" style="padding-left: 48px;" autocomplete="current-password" required placeholder="••••••••">
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div style="margin-bottom: 24px; display: flex; align-items: center; gap: 10px;">
                <input type="checkbox" id="remember_me" name="_remember_me" style="accent-color: var(--brand); width: 18px; height: 18px;">
                <label for="remember_me" style="font-size: 0.875rem; color: var(--text-soft); font-weight: 500; cursor: pointer;">Se souvenir de moi</label>
            </div>

            <button class="btn btn-primary" type="submit" style="width: 100%; height: 52px; font-size: 1rem;">
                Se connecter <i class="fa-solid fa-arrow-right" style="margin-left: 8px;"></i>
            </button>
        </form>

        <div style="text-align: center; margin-top: 32px; padding-top: 24px; border-top: 1px solid var(--border);">
            <p style="color: var(--muted); font-size: 0.9375rem;">
                Pas encore de compte ? 
                <a href="{{ path('app_register') }}" style="color: var(--brand); font-weight: 700; text-decoration: none;">Créez-en un gratuitement</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}
