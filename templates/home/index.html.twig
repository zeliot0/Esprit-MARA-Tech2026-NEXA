  <style>
    :root { --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1); }

    [data-theme="light"] {
      --bg: #f8fafc;
      --surface: #ffffff;
      --surface-rgb: 255, 255, 255;
      --text: #0f172a;
      --muted: #64748b;
      --border: rgba(16, 185, 129, 0.12);
      --primary: #10b981;
      --primary-dark: #059669;
      --accent: #06b6d4;
      --gradient: linear-gradient(135deg, #10b981 0%, #06b6d4 100%);
      --shadow-sm: 0 4px 16px rgba(0,0,0,0.08);
      --shadow-md: 0 12px 40px rgba(16, 185, 129, 0.15);
      --shadow-lg: 0 20px 60px rgba(0,0,0,0.12);
    }

    [data-theme="dark"] {
      --bg: #0f172a;
      --surface: #1e293b;
      --surface-rgb: 30, 41, 59;
      --text: #e2e8f0;
      --muted: #94a3b8;
      --border: rgba(16, 185, 129, 0.12);
      --primary: #10b981;
      --primary-dark: #059669;
      --accent: #06b6d4;
      --gradient: linear-gradient(135deg, #10b981 0%, #06b6d4 100%);
      --shadow-sm: 0 4px 12px rgba(0,0,0,0.35);
      --shadow-md: 0 12px 32px rgba(16, 185, 129, 0.30);
      --shadow-lg: 0 22px 70px rgba(0,0,0,0.35);
    }

    * { box-sizing: border-box; }
    body {
      margin: 0;
      font-family: 'Inter', system-ui, sans-serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
      transition: background 0.5s ease, color 0.5s ease;
      overflow-x: hidden;
    }

    /* =========================
       HEADER (NAVBAR)
       ========================= */
    header {
      position: fixed;
      top: 0; left: 0; right: 0;
      height: 80px;
      background: rgba(var(--surface-rgb), 0.92);
      backdrop-filter: blur(18px);
      border-bottom: 1px solid var(--border);
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 6%;
      z-index: 1000;
      transition: var(--transition);
    }

    .logo {
      font-size: 2.1rem;
      font-weight: 800;
      letter-spacing: 0.5px;
      background: var(--gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      display: flex;
      align-items: center;
      gap: 12px;
      user-select: none;
      text-decoration: none;
    }
    .logo i {
      background: var(--gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    nav {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    nav a {
      color: var(--muted);
      text-decoration: none;
      margin: 0 10px;
      font-weight: 700;
      transition: var(--transition);
      padding: 10px 10px;
      border-radius: 12px;
    }
    nav a:hover {
      color: var(--primary);
      background: rgba(16,185,129,.08);
    }

    .nav-tools{
      display:flex;
      align-items:center;
      gap:10px;
      margin-left: 8px;
      padding-left: 12px;
      border-left: 1px solid var(--border);
    }

    .lang-select{
      appearance: none;
      -webkit-appearance: none;
      -moz-appearance: none;
      background: rgba(var(--surface-rgb), .8);
      border: 1px solid var(--border);
      color: var(--text);
      padding: 10px 38px 10px 12px;
      border-radius: 12px;
      font-weight: 700;
      cursor: pointer;
      transition: var(--transition);
      outline: none;
      position: relative;
      box-shadow: var(--shadow-sm);
    }
    .lang-wrap{
      position: relative;
    }
    .lang-wrap::after{
      content:"\f0d7";
      font-family:"Font Awesome 6 Free";
      font-weight:900;
      position:absolute;
      right: 12px;
      top:50%;
      transform: translateY(-50%);
      color: var(--muted);
      pointer-events:none;
      font-size: .95rem;
    }
    .lang-select:hover{
      border-color: rgba(16,185,129,.35);
      transform: translateY(-1px);
    }

    .theme-toggle {
      background: rgba(var(--surface-rgb), .6);
      border: 1px solid var(--border);
      color: var(--muted);
      width: 44px;
      height: 44px;
      border-radius: 12px;
      display: inline-flex;
      align-items:center;
      justify-content:center;
      font-size: 1.15rem;
      cursor: pointer;
      transition: var(--transition);
      box-shadow: var(--shadow-sm);
    }
    .theme-toggle:hover {
      color: var(--primary);
      transform: rotate(10deg) translateY(-1px);
      border-color: rgba(16,185,129,.35);
    }

    /* =========================
       BANNER UNDER NAVBAR
       ========================= */
    .top-banner {
      position: fixed;
      top: 80px;
      left: 0;
      right: 0;
      height: 44px;
      z-index: 999;
      display: flex;
      align-items: center;
      background: linear-gradient(90deg, rgba(16,185,129,.10), rgba(6,182,212,.10));
      border-bottom: 1px solid var(--border);
      backdrop-filter: blur(14px);
      overflow: hidden;
    }

    .top-banner::before,
    .top-banner::after{
      content:"";
      position:absolute;
      top:0; bottom:0;
      width: 70px;
      z-index: 2;
      pointer-events:none;
    }
    .top-banner::before{
      left:0;
      background: linear-gradient(90deg, rgba(var(--surface-rgb), .95), rgba(var(--surface-rgb), 0));
    }
    .top-banner::after{
      right:0;
      background: linear-gradient(270deg, rgba(var(--surface-rgb), .95), rgba(var(--surface-rgb), 0));
    }

    .banner-track{
      display:flex;
      align-items:center;
      gap: 34px;
      width: max-content;
      padding-left: 24px;
      animation: marquee 18s linear infinite;
      will-change: transform;
    }
    .top-banner:hover .banner-track{ animation-play-state: paused; }

    .banner-item{
      display:inline-flex;
      align-items:center;
      gap: 12px;
      font-weight: 900;
      letter-spacing: .4px;
      white-space: nowrap;
      font-size: .98rem;
      color: var(--text);
      opacity: .95;
    }
    .banner-item .pill{
      padding: 6px 10px;
      border-radius: 999px;
      background: rgba(16,185,129,.12);
      border: 1px solid rgba(16,185,129,.22);
      color: var(--primary-dark);
      font-weight: 900;
      font-size: .86rem;
    }

    /* Simple flag (inline CSS) */
    .flag-pal{
      width: 18px;
      height: 12px;
      border-radius: 2px;
      border: 1px solid rgba(0,0,0,.08);
      background:
        linear-gradient(to bottom,
          #000 0 33%,
          #fff 33% 66%,
          #0a8f3e 66% 100%);
      position: relative;
      box-shadow: 0 4px 10px rgba(0,0,0,.08);
    }
    .flag-pal::before{
      content:"";
      position:absolute;
      left:-1px;
      top:-1px;
      width:0; height:0;
      border-top: 7px solid transparent;
      border-bottom: 7px solid transparent;
      border-left: 10px solid #d10f2f;
    }

    @keyframes marquee {
      from { transform: translateX(0); }
      to   { transform: translateX(-50%); }
    }

    @media (prefers-reduced-motion: reduce){
      .banner-track{ animation: none; }
    }

    /* =========================
       ANIMATIONS
       ========================= */
    .hero, .mission, .categories, .how-it-works, .impact, .cta-final {
      opacity: 0;
      transform: translateY(40px);
      transition: opacity 0.8s ease, transform 0.8s ease;
    }
    .hero.visible, .mission.visible, .categories.visible, .how-it-works.visible, .impact.visible, .cta-final.visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* =========================
       HERO
       ========================= */
    .hero {
      /* header (80) + banner (44) + spacing */
      padding: 200px 6% 140px;
      text-align: center;
      position: relative;
    }

    .hero h1 {
      font-size: clamp(2.8rem, 5vw, 4.8rem);
      font-weight: 900;
      line-height: 1.08;
      margin: 0 0 22px;
      background: var(--gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .hero .tagline {
      font-size: 1.25rem;
      color: var(--primary);
      font-weight: 800;
      margin-bottom: 12px;
      letter-spacing: 0.3px;
      display:inline-flex;
      align-items:center;
      gap: 10px;
      padding: 8px 14px;
      border-radius: 999px;
      background: rgba(16,185,129,.10);
      border: 1px solid rgba(16,185,129,.18);
    }

    .hero p {
      font-size: 1.18rem;
      color: var(--muted);
      max-width: 760px;
      margin: 0 auto 46px;
      line-height: 1.7;
    }

    .hero-ctas {
      display: flex;
      justify-content: center;
      gap: 18px;
      flex-wrap: wrap;
    }

    /* BUTTONS */
    .cta-primary, .cta-secondary {
      padding: 16px 40px;
      border-radius: 14px;
      font-weight: 800;
      cursor: pointer;
      transition: var(--transition);
      font-size: 1.03rem;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 10px;
    }
    .cta-primary {
      background: var(--gradient);
      color: white;
      border: none;
      box-shadow: 0 10px 28px rgba(16, 185, 129, 0.25);
    }
    .cta-primary:hover {
      transform: translateY(-3px) scale(1.03);
      box-shadow: 0 18px 55px rgba(16, 185, 129, 0.38);
    }
    .cta-secondary {
      background: rgba(var(--surface-rgb), .55);
      border: 1px solid rgba(16,185,129,.30);
      color: var(--primary-dark);
      box-shadow: var(--shadow-sm);
    }
    .cta-secondary:hover {
      background: rgba(16,185,129,.12);
      border-color: rgba(16,185,129,.55);
      transform: translateY(-2px);
    }

    /* SECTIONS */
    .section-title {
      font-size: clamp(2.2rem, 3.5vw, 3.2rem);
      font-weight: 900;
      margin: 0 0 14px;
      background: var(--gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-align: center;
      letter-spacing: -0.6px;
    }
    .section-subtitle {
      font-size: 1.1rem;
      color: var(--muted);
      max-width: 720px;
      margin: 0 auto 60px;
      text-align: center;
      line-height: 1.7;
    }

    /* MISSION */
    .mission {
      background: rgba(var(--surface-rgb), 0.55);
      padding: 100px 6%;
      border-top: 1px solid var(--border);
      border-bottom: 1px solid var(--border);
      backdrop-filter: blur(10px);
    }

    .mission-content {
      max-width: 900px;
      margin: 0 auto;
      text-align: center;
    }

    .mission-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 30px;
      margin-top: 50px;
    }

    .stat-card {
      background: rgba(var(--surface-rgb), 0.8);
      padding: 30px;
      border-radius: 18px;
      border: 1px solid var(--border);
      transition: var(--transition);
    }
    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-md);
      border-color: rgba(16,185,129,.45);
    }

    .stat-number {
      font-size: 2.5rem;
      font-weight: 900;
      background: var(--gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 8px;
    }

    .stat-label {
      color: var(--muted);
      font-size: 0.95rem;
      font-weight: 700;
    }

    /* CATEGORIES */
    .categories { padding: 100px 6%; }

    .categories-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .category-card {
      background: rgba(var(--surface-rgb), 0.7);
      border-radius: 22px;
      padding: 40px 30px;
      border: 1px solid var(--border);
      transition: var(--transition);
      text-align: center;
      cursor: pointer;
    }

    .category-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-md);
      border-color: rgba(16,185,129,.45);
    }

    .category-icon {
      font-size: 3rem;
      margin-bottom: 20px;
      transition: var(--transition);
    }

    .category-card:hover .category-icon { transform: scale(1.15); }

    .category-title {
      font-weight: 900;
      font-size: 1.25rem;
      margin: 0 0 12px;
      color: var(--text);
    }

    .category-desc {
      color: var(--muted);
      font-size: 0.95rem;
      line-height: 1.6;
    }

    /* HOW IT WORKS */
    .how-it-works {
      background: rgba(var(--surface-rgb), 0.55);
      padding: 100px 6%;
      border-top: 1px solid var(--border);
      border-bottom: 1px solid var(--border);
    }

    .steps-container {
      max-width: 1000px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 40px;
    }

    .step { text-align: center; }

    .step-number {
      width: 70px;
      height: 70px;
      background: var(--gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
      font-weight: 900;
      color: white;
      margin: 0 auto 24px;
      box-shadow: var(--shadow-md);
    }

    .step-title {
      font-size: 1.15rem;
      font-weight: 900;
      margin-bottom: 12px;
      color: var(--text);
    }

    .step-desc {
      color: var(--muted);
      font-size: 0.95rem;
      line-height: 1.6;
    }

    /* IMPACT */
    .impact { padding: 100px 6%; }

    .impact-content {
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
    }

    .impact-quote {
      font-size: 1.35rem;
      font-style: italic;
      color: var(--text);
      line-height: 1.8;
      margin: 40px 0;
      padding: 40px;
      background: rgba(var(--surface-rgb), 0.7);
      border-radius: 20px;
      border-left: 4px solid var(--primary);
      box-shadow: var(--shadow-sm);
    }

    .impact-author {
      font-size: 1.05rem;
      color: var(--primary);
      font-weight: 800;
      font-style: normal;
      margin-top: 18px;
    }

    /* CTA FINAL */
    .cta-final {
      background: var(--gradient);
      padding: 100px 6%;
      text-align: center;
      color: white;
    }

    .cta-final h2 {
      font-size: clamp(2rem, 4vw, 3.5rem);
      font-weight: 900;
      margin: 0 0 20px;
      color: white;
    }

    .cta-final p {
      font-size: 1.15rem;
      max-width: 700px;
      margin: 0 auto 40px;
      opacity: 0.95;
      line-height: 1.7;
    }

    .cta-final .cta-primary {
      background: white;
      color: var(--primary);
      padding: 18px 50px;
      font-size: 1.1rem;
      box-shadow: 0 10px 34px rgba(0,0,0,0.22);
    }

    /* FOOTER */
    footer {
      background: rgba(var(--surface-rgb), 0.55);
      padding: 50px 6%;
      text-align: center;
      border-top: 1px solid var(--border);
    }

    .footer-links {
      display: flex;
      justify-content: center;
      gap: 30px;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }

    .footer-links a {
      color: var(--muted);
      text-decoration: none;
      font-weight: 700;
      transition: var(--transition);
    }
    .footer-links a:hover { color: var(--primary); }

    footer p {
      color: var(--muted);
      font-size: 0.9rem;
      margin: 10px 0 0;
    }

    /* RESPONSIVE */
    @media (max-width: 900px) {
      nav a { display:none; } /* simple: cache liens sur mobile */
      .nav-tools { border-left: none; padding-left: 0; }
    }

    @media (max-width: 768px) {
      header { padding: 0 4%; height: 70px; }
      .top-banner { top: 70px; height: 42px; }
      .logo { font-size: 1.6rem; }
      .hero { padding: 185px 4% 100px; }
      .hero h1 { font-size: 2.2rem; }
      .hero .tagline { font-size: 1.02rem; }
      .hero p { font-size: 1rem; }
      .section-title { font-size: 2rem; }
      .section-subtitle { font-size: 1rem; }
      .categories-grid, .steps-container { grid-template-columns: 1fr; gap: 20px; }
      .mission-stats { grid-template-columns: repeat(2, 1fr); }
      .lang-select{ padding: 10px 34px 10px 12px; }
    }

    /* RTL (Arabic) tweaks */
    html[dir="rtl"] body { font-family: 'Inter', system-ui, sans-serif; }
    html[dir="rtl"] nav { direction: rtl; }
    html[dir="rtl"] .nav-tools { direction: rtl; }
  </style>
</head>

