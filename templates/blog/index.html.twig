{% extends 'base.html.twig' %}

{% block title %}Journal Aychek • Récits d'Impact{% endblock %}

{% block body %}
<div style="position: absolute; top: 0; left: 0; width: 100%; height: 800px; background: radial-gradient(circle at 10% 20%, rgba(13, 148, 136, 0.08) 0%, transparent 40%), radial-gradient(circle at 90% 80%, rgba(99, 102, 241, 0.08) 0%, transparent 40%), linear-gradient(180deg, var(--bg-subtle) 0%, var(--surface) 100%); z-index: -1;"></div>

<div class="container" style="margin-top: 6rem; margin-bottom: 8rem; position: relative;">
    <header style="text-align: center; margin-bottom: 8rem;">
        <div class="animate-up" style="display: inline-flex; align-items: center; gap: 12px; background: rgba(13, 148, 136, 0.1); padding: 10px 24px; border-radius: var(--radius-full); margin-bottom: 2.5rem; border: 1px solid rgba(13, 148, 136, 0.2); backdrop-filter: blur(10px);">
            <i class="fa-solid fa-sparkles" style="color: var(--brand); animation: pulse 2s infinite;"></i>
            <span style="font-size: 0.85rem; font-weight: 900; text-transform: uppercase; letter-spacing: 0.2em; color: var(--text);">Histoires d'Impact</span>
        </div>
        <h1 class="animate-up" style="font-size: clamp(3rem, 8vw, 6rem); font-weight: 950; margin-bottom: 2rem; letter-spacing: -4px; line-height: 0.9;">Aychek <span style="background: linear-gradient(135deg, #0d9488 0%, #6366f1 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Journal</span></h1>
        <p class="animate-up" style="max-width: 700px; margin: 0 auto; color: var(--muted); font-size: 1.4rem; line-height: 1.6; font-weight: 500;">
            Plongez dans les récits qui façonnent notre futur. Ici, chaque mot témoigne de la force de votre solidarité.
        </p>
        
        {% if is_granted('ROLE_ASSOCIATION') %}
            <div class="animate-up" style="margin-top: 4rem;">
                <button class="hero-btn" onclick="toggleBlogDrawer(true)">
                    <span class="btn-shine"></span>
                    <i class="fa-solid fa-feather-pointed"></i> Raconter mon histoire
                </button>
            </div>
        {% endif %}
    </header>

    {% if posts|length > 0 %}
        {# --- FEATURED POST (Hero) --- #}
        {% set featured = posts|first %}
        <section class="animate-up featured-post" style="margin-bottom: 6rem; cursor: pointer;" onclick="window.location.href='{{ path('app_blog_show', {slug: featured.slug}) }}'">
            <div class="glass-panel" style="padding: 0; overflow: hidden; display: grid; grid-template-columns: 1.2fr 1fr; border-radius: var(--radius-3xl); min-height: 500px; border: 1px solid rgba(255,255,255,0.1); box-shadow: 0 40px 100px rgba(0,0,0,0.15);">
                <div style="position: relative; overflow: hidden;">
                    <img src="{{ featured.image }}" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);" class="hero-img">
                    <div style="position: absolute; inset: 0; background: linear-gradient(90deg, transparent 60%, var(--surface) 100%);"></div>
                </div>
                <div style="padding: 60px; display: flex; flex-direction: column; justify-content: center;">
                    <span style="font-size: 0.8rem; font-weight: 800; color: var(--brand); text-transform: uppercase; letter-spacing: 0.2em; margin-bottom: 20px; display: block;">⭐ À LA UNE</span>
                    <h2 style="font-size: 2.5rem; font-weight: 950; line-height: 1.1; margin-bottom: 24px; letter-spacing: -1px;">{{ featured.title }}</h2>
                    <p style="font-size: 1.1rem; color: var(--muted); line-height: 1.7; margin-bottom: 32px;">{{ featured.summary|default(featured.content|striptags|slice(0, 200) ~ '...') }}</p>
                    <div style="display: flex; align-items: center; gap: 16px;">
                        <div style="width: 48px; height: 48px; border-radius: 50%; background: var(--grad-premium); display: flex; align-items: center; justify-content: center; color: white; font-weight: 800; border: 3px solid var(--surface);">
                            {{ featured.author.fullName|slice(0, 1)|upper }}
                        </div>
                        <div>
                            <div style="font-weight: 900; font-size: 1rem;">{{ featured.author.fullName }}</div>
                            <div style="font-size: 0.8rem; color: var(--muted);">{{ featured.createdAt|date('d M Y') }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {# --- BLOG GRID (Asymmetric) --- #}
        <div class="blog-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(400px, 1fr)); gap: 48px;">
            {% for post in posts|slice(1) %}
                <article class="creative-card animate-up" onclick="window.location.href='{{ path('app_blog_show', {slug: post.slug}) }}'">
                    <div class="card-inner">
                        <div class="card-image">
                            <img src="{{ post.image }}" alt="{{ post.title }}">
                            <div class="card-date">
                                <span>{{ post.createdAt|date('d') }}</span>
                                <small>{{ post.createdAt|date('M') }}</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <h3>{{ post.title }}</h3>
                            <p>{{ post.summary|default(post.content|striptags|slice(0, 120) ~ '...') }}</p>
                            <div class="card-footer">
                                <span class="read-more">Lire l'histoire <i class="fa-solid fa-arrow-right"></i></span>
                            </div>
                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>
    {% else %}
        <div style="text-align: center; padding: 120px 0;">
            <div style="font-size: 5rem; opacity: 0.1; margin-bottom: 2rem;"><i class="fa-solid fa-ghost"></i></div>
            <h3 style="font-weight: 900; color: var(--muted);">Le journal est encore vierge.</h3>
            <p class="muted">Revenez bientôt pour nos premiers récits.</p>
        </div>
    {% endif %}
</div>

<!-- Blog Creation Drawer -->
<div id="blogDrawer" style="position: fixed; top: 0; right: -500px; width: 500px; height: 100vh; background: var(--surface); z-index: 3000; box-shadow: -20px 0 60px rgba(0,0,0,0.1); transition: right 0.4s cubic-bezier(0.16, 1, 0.3, 1); display: flex; flex-direction: column;">
    <div style="padding: 32px; border-bottom: 1px solid var(--border); display: flex; justify-content: space-between; align-items: center; background: var(--bg-subtle);">
        <div>
            <h3 style="font-weight: 900; margin: 0; font-size: 1.25rem;">Publier sur le Journal</h3>
            <p class="muted" style="margin: 4px 0 0; font-size: 0.8rem;">Partagez votre impact avec la communauté.</p>
        </div>
        <button class="btn btn-sm btn-ghost" onclick="toggleBlogDrawer(false)" style="width: 40px; height: 40px; border-radius: 50%;"><i class="fa-solid fa-xmark"></i></button>
    </div>
    
    <form action="{{ path('app_blog_create_association') }}" method="POST" style="flex-grow: 1; overflow-y: auto; padding: 32px;">
        <div style="margin-bottom: 24px;">
            <label style="display: block; font-weight: 800; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--muted); margin-bottom: 10px;">Titre de l'histoire</label>
            <input type="text" name="title" required class="form-input" placeholder="Ex: Notre mission à Kasserine..." style="height: 52px; border-radius: var(--radius-lg);">
        </div>
        
        <div style="margin-bottom: 24px;">
            <label style="display: block; font-weight: 800; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--muted); margin-bottom: 10px;">Résumé court</label>
            <input type="text" name="summary" class="form-input" placeholder="Une phrase accrocheuse..." style="height: 52px; border-radius: var(--radius-lg);">
        </div>

        <div style="margin-bottom: 24px;">
            <label style="display: block; font-weight: 800; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--muted); margin-bottom: 10px;">Image (URL)</label>
            <input type="url" name="image_url" class="form-input" placeholder="https://..." style="height: 52px; border-radius: var(--radius-lg);">
        </div>

        <div style="margin-bottom: 32px;">
            <label style="display: block; font-weight: 800; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--muted); margin-bottom: 10px;">Contenu du récit</label>
            <textarea name="content" required class="form-input" placeholder="Racontez-nous ce qui s'est passé..." style="height: 250px; border-radius: var(--radius-lg); padding: 20px; font-family: inherit; line-height: 1.6;"></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width: 100%; height: 56px; border-radius: var(--radius-full); font-weight: 800;">
            <i class="fa-solid fa-paper-plane"></i> Publier mon histoire
        </button>
    </form>
</div>
<div id="blogDrawerOverlay" onclick="toggleBlogDrawer(false)" style="position: fixed; inset: 0; background: rgba(0,0,0,0.3); backdrop-filter: blur(4px); z-index: 2999; opacity: 0; pointer-events: none; transition: opacity 0.4s ease;"></div>

<style>
    :root {
        --c-hero: #0d9488;
    }

    .hero-btn {
        position: relative;
        background: var(--text);
        color: var(--surface);
        padding: 20px 48px;
        border-radius: var(--radius-full);
        font-weight: 900;
        font-size: 1.1rem;
        border: none;
        cursor: pointer;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 12px;
    }

    .hero-btn:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    }

    .btn-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: 0.5s;
    }

    .hero-btn:hover .btn-shine {
        left: 100%;
    }

    .featured-post:hover .hero-img {
        transform: scale(1.05);
    }

    .creative-card {
        background: transparent;
        cursor: pointer;
        perspective: 1000px;
    }

    .card-inner {
        background: var(--surface);
        border-radius: var(--radius-3xl);
        overflow: hidden;
        border: 1px solid var(--border);
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .creative-card:hover .card-inner {
        transform: translateY(-15px) rotateX(2deg) rotateY(-2deg);
        box-shadow: 0 30px 60px rgba(0,0,0,0.1);
        border-color: var(--brand);
    }

    .card-image {
        position: relative;
        height: 280px;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .creative-card:hover .card-image img {
        transform: scale(1.1);
    }

    .card-date {
        position: absolute;
        bottom: 20px;
        left: 20px;
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(10px);
        padding: 10px 15px;
        border-radius: var(--radius-xl);
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: var(--shadow-lg);
    }

    .card-date span {
        font-weight: 900;
        font-size: 1.2rem;
        line-height: 1;
        color: var(--text);
    }

    .card-date small {
        font-weight: 800;
        font-size: 0.7rem;
        text-transform: uppercase;
        color: var(--brand);
    }

    .card-body {
        padding: 32px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .card-body h3 {
        font-size: 1.5rem;
        font-weight: 900;
        margin-bottom: 16px;
        line-height: 1.25;
        letter-spacing: -0.5px;
    }

    .card-body p {
        color: var(--muted);
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 24px;
    }

    .card-footer {
        margin-top: auto;
    }

    .read-more {
        font-weight: 900;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--brand);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .read-more i {
        transition: transform 0.3s ease;
    }

    .creative-card:hover .read-more i {
        transform: translateX(10px);
    }

    @keyframes pulse {
        0% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.2); opacity: 0.8; }
        100% { transform: scale(1); opacity: 1; }
    }
</style>
{% endblock %}

{% block javascripts %}
<script>
    function toggleBlogDrawer(show) {
        const drawer = document.getElementById('blogDrawer');
        const overlay = document.getElementById('blogDrawerOverlay');
        if (show) {
            drawer.style.right = '0';
            overlay.style.opacity = '1';
            overlay.style.pointerEvents = 'auto';
        } else {
            drawer.style.right = '-500px';
            overlay.style.opacity = '0';
            overlay.style.pointerEvents = 'none';
        }
    }
</script>
{% endblock %}
