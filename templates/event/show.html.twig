{% extends 'base.html.twig' %}

{% block title %}{{ event.title }} • Aychek{% endblock %}

{% block body %}
<div class="event-hero" style="position: relative; height: 50vh; overflow: hidden; background: #000;">
    {% if event.image %}
        <img src="{{ asset('uploads/events/' ~ event.image) }}" alt="{{ event.title }}" style="width: 100%; height: 100%; object-fit: cover; opacity: 0.7;">
    {% else %}
        <div style="width: 100%; height: 100%; background: var(--grad-premium); opacity: 0.8;"></div>
    {% endif %}
    
    <div style="position: absolute; bottom: 0; left: 0; right: 0; padding: var(--space-2xl) 0; background: linear-gradient(transparent, rgba(0,0,0,0.8));">
        <div class="container">
            <div class="animate-up">
                <span class="badge" style="background: var(--brand); color: white; margin-bottom: 15px;">{{ event.status }}</span>
                <h1 style="font-size: 3.5rem; font-weight: 800; color: white; margin-bottom: 20px; line-height: 1.1;">{{ event.title }}</h1>
                <div style="display: flex; gap: 30px; color: white; font-weight: 700;">
                    <span><i class="fa-solid fa-calendar-day"></i> {{ event.startAt|date('d F Y') }}</span>
                    <span><i class="fa-solid fa-clock"></i> {{ event.startAt|date('H:i') }}</span>
                    <span><i class="fa-solid fa-location-dot"></i> {{ event.location }}</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container" style="padding-top: var(--space-2xl); padding-bottom: var(--space-2xl);">
    <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 60px;">
        <article class="animate-up delay-1">
            <h2 style="font-size: 1.75rem; font-weight: 800; margin-bottom: 25px;">À propos de cet événement</h2>
            <div class="muted" style="font-size: 1.1rem; line-height: 1.8; white-space: pre-line;">
                {{ event.description }}
            </div>
            
            {% if is_granted('ROLE_ASSOCIATION') and event.createdBy == app.user %}
                <div style="margin-top: 50px; padding-top: 30px; border-top: 1px solid var(--border); display: flex; gap: 15px;">
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn">
                        <i class="fa-solid fa-pen-to-square"></i> Modifier
                    </a>
                    <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');" style="display: inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                        <button class="btn btn-danger" style="background: rgba(239, 68, 68, 0.1); color: #ef4444; border-color: #ef4444;">
                            <i class="fa-solid fa-trash-can"></i> Supprimer
                        </button>
                    </form>
                </div>
            {% endif %}
        </article>

        <aside class="animate-up delay-2">
            <div class="glass-panel" style="position: sticky; top: 100px;">
                <h4 style="font-weight: 800; margin-bottom: 20px;">Organisé par</h4>
                <div style="display: flex; align-items: center; gap: 15px;">
                    <div style="width: 50px; height: 50px; border-radius: 50%; background: var(--grad-premium); display: grid; place-items: center; color: white; font-weight: 800;">
                        {{ event.createdBy.fullName|slice(0,1)|upper }}
                    </div>
                    <div>
                        <div style="font-weight: 800; color: var(--text);">{{ event.createdBy.fullName }}</div>
                        <div class="muted small">Association Partenaire</div>
                    </div>
                </div>
                <button class="btn btn-primary" style="width: 100%; margin-top: 30px; border-radius: var(--radius-full);">
                    Partager l'événement
                </button>
            </div>
        </aside>
    </div>
</div>
{% endblock %}
