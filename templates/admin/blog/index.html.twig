{% extends 'admin/base.html.twig' %}

{% block title %}Gestion du Blog | Aychek Admin{% endblock %}
{% block page_title %}Articles de Blog{% endblock %}

{% block body %}
<div class="glass-panel" style="padding: 24px; border-radius: var(--radius-xl); margin-bottom: 24px; display: flex; justify-content: space-between; align-items: center;">
    <div>
        <h3 style="font-weight: 800; margin-bottom: 4px;">Journal de Bord</h3>
        <p class="muted">Partagez l'actualité et les histoires de succès.</p>
    </div>
    <a href="{{ path('admin_blog_new') }}" class="btn btn-primary" style="height: 48px; border-radius: var(--radius-full);">
        <i class="fa-solid fa-plus-circle"></i> Nouvel Article
    </a>
</div>

<div class="table-container">
    <table class="admin-table">
        <thead>
            <tr>
                <th>Article</th>
                <th>Auteur</th>
                <th>Statut</th>
                <th>Date</th>
                <th style="text-align: right;">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
            <tr>
                <td>
                    <div style="display: flex; align-items: center; gap: 16px;">
                        <div style="width: 60px; height: 40px; border-radius: 8px; overflow: hidden; background: var(--surface2);">
                            {% if post.image %}
                                <img src="{{ post.image }}" style="width: 100%; height: 100%; object-fit: cover;">
                            {% else %}
                                <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; font-size: 0.8rem; color: var(--muted);">NO IMG</div>
                            {% endif %}
                        </div>
                        <div>
                            <div style="font-weight: 700; color: var(--text);">{{ post.title }}</div>
                            <div style="font-size: 0.75rem; color: var(--muted);">/blog/{{ post.slug }}</div>
                        </div>
                    </div>
                </td>
                <td>
                    <span style="font-weight: 600;">{{ post.author.fullName }}</span>
                </td>
                <td>
                    {% if post.isPublished %}
                        <span class="badge badge-success">Publié</span>
                    {% else %}
                        <span class="badge badge-warning">Brouillon</span>
                    {% endif %}
                </td>
                <td style="font-size: 0.85rem;">{{ post.createdAt|date('d/m/Y H:i') }}</td>
                <td style="text-align: right;">
                    <div style="display: flex; justify-content: flex-end; gap: 8px;">
                        <a href="{{ path('admin_blog_edit', {id: post.id}) }}" class="btn btn-sm btn-ghost"><i class="fa-solid fa-pen-to-square"></i></a>
                        <form action="{{ path('admin_blog_delete', {id: post.id}) }}" method="POST" style="display: inline;" onsubmit="return confirm('Supprimer cet article ?')">
                            <button type="submit" class="btn btn-sm btn-ghost" style="color: #ef4444;"><i class="fa-solid fa-trash-can"></i></button>
                        </form>
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" style="text-align: center; padding: 48px; color: var(--muted);">Aucun article créé.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
