{% extends 'base.html.twig' %}
{% block title %}Nouvelle catégorie | Aychek{% endblock %}

{% block body %}
  <div class="card">
    <div class="card-hd">
      <h1 class="h1">Nouvelle catégorie</h1>
      <p class="sub">Crée une catégorie claire pour organiser les cases.</p>
    </div>

    <div class="card-bd">
      {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.slug) }}
        {{ form_row(form.icon) }}
        <div style="display:flex;gap:10px;margin-top:12px;">
          <button class="btn btn-primary" type="submit"><i class="fa-solid fa-check"></i> Save</button>
          <a class="btn btn-ghost" href="{{ path('category_index') }}">Back</a>
        </div>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
