{% extends 'base.html.twig' %}

{% block title %}AuditLog{% endblock %}

{% block body %}
    <h1>AuditLog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ audit_log.id }}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>{{ audit_log.action }}</td>
            </tr>
            <tr>
                <th>EntityType</th>
                <td>{{ audit_log.entityType }}</td>
            </tr>
            <tr>
                <th>EntityId</th>
                <td>{{ audit_log.entityId }}</td>
            </tr>
            <tr>
                <th>MetaJson</th>
                <td>{{ audit_log.metaJson ? audit_log.metaJson|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ audit_log.createdAt ? audit_log.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_audit_log_index') }}">back to list</a>

    <a href="{{ path('app_audit_log_edit', {'id': audit_log.id}) }}">edit</a>

    {{ include('audit_log/_delete_form.html.twig') }}
{% endblock %}
