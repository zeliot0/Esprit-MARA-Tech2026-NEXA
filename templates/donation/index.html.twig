{% extends 'base.html.twig' %}

{% block title %}Donation index{% endblock %}

{% block body %}
    <h1>Donation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Currency</th>
                <th>DonorName</th>
                <th>DonorEmail</th>
                <th>Status</th>
                <th>Note</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.id }}</td>
                <td>{{ donation.amount }}</td>
                <td>{{ donation.currency }}</td>
                <td>{{ donation.donorName }}</td>
                <td>{{ donation.donorEmail }}</td>
                <td>{{ donation.status }}</td>
                <td>{{ donation.note }}</td>
                <td>{{ donation.createdAt ? donation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_donation_show', {'id': donation.id}) }}">show</a>
                    <a href="{{ path('app_donation_edit', {'id': donation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_donation_new') }}">Create new</a>
{% endblock %}
