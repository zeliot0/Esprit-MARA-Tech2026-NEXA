{% extends 'base.html.twig' %}

{% block title %}Donation{% endblock %}

{% block body %}
    <h1>Donation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ donation.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ donation.amount }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ donation.currency }}</td>
            </tr>
            <tr>
                <th>DonorName</th>
                <td>{{ donation.donorName }}</td>
            </tr>
            <tr>
                <th>DonorEmail</th>
                <td>{{ donation.donorEmail }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ donation.status }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ donation.note }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ donation.createdAt ? donation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_donation_index') }}">back to list</a>

    <a href="{{ path('app_donation_edit', {'id': donation.id}) }}">edit</a>

    {{ include('donation/_delete_form.html.twig') }}
{% endblock %}
